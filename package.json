  "author": "Alex Katz",
  "main": "dist/Popover.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p . && npm run copy-types",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
